<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/imgBugIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Bug Icon"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- Botón logout -->

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:paddingTop="8dp"
        android:text="Reporte de bugs"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
    android:id="@+id/btnGestionUsuarios"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Usuarios"
    android:textSize="12sp"
    android:background="@android:color/transparent"
    android:textColor="@color/text_primary"
    android:visibility="gone"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="@id/btnLogout"
    app:layout_constraintBottom_toBottomOf="@id/btnLogout"
    app:layout_constraintEnd_toStartOf="@id/btnLogout"/>



    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="@id/imgBugIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card del formulario -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nombre del juego -->
            <EditText
                android:id="@+id/etNombreJuego"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_background"
                android:hint="¿En qué juego apareció?"
                android:textColorHint="#6B7280"
                android:textColor="#FFFFFF"
                android:padding="16dp"/>

            <!-- Label Plataforma -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plataforma"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Spinner Plataforma -->
            <Spinner
                android:id="@+id/spPlataforma"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_background"
                android:spinnerMode="dropdown"
                android:popupBackground="#1F1F2E"/>

            <!-- Tipo de Bug -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Bug"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Spinner Tipo de Bug -->
            <Spinner
                android:id="@+id/spTipoBug"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_background"
                android:spinnerMode="dropdown"
                android:popupBackground="#1F1F2E"/>

            <!-- Gravedad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gravedad"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgGravedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rbBaja"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Baja"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/purple_accent"/>

                <RadioButton
                    android:id="@+id/rbMedia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Media"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/purple_accent"/>

                <RadioButton
                    android:id="@+id/rbAlta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Alta"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/purple_accent"/>
            </RadioGroup>

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/input_background"
                android:hint="Contanos qué pasó..."
                android:textColorHint="#6B7280"
                android:textColor="#FFFFFF"
                android:gravity="top|start"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:inputType="textMultiLine"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL de portada (opcional)"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etImagenUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:hint="Pegá acá la URL de la imagen"
                android:textColorHint="#6B7280"
                android:textColor="#FFFFFF"
                android:padding="16dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botones inferiores -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerLista"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Consultar historial"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReportar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Enviar reporte"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_green"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
